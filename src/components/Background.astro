<div>
    <div></div>
</div>

<style>
    @keyframes rotating {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    div div {
        position: fixed;
        z-index: -1;
        width: 300vw;
        height: 300vh;
        left: -100vw;
        top: -100vh;

        --s: 90px; /* control the size */
        --d: 5px; /* control the gap between stars */

        --_g: #191a30 36deg, #0000 0;
        background: conic-gradient(
                from 162deg at calc(var(--s) * 0.5) calc(var(--s) * 0.68),
                var(--_g)
            ),
            conic-gradient(
                from 18deg at calc(var(--s) * 0.19) calc(var(--s) * 0.59),
                var(--_g)
            ),
            conic-gradient(
                from 306deg at calc(var(--s) * 0.81) calc(var(--s) * 0.59),
                var(--_g)
            ),
            #16172d;
        background-position: 0 calc(var(--s) * 0.35);
        background-size: calc(var(--s) + var(--d)) calc(var(--s) + var(--d));
        animation: rotating 120s linear infinite;
    }
</style>
